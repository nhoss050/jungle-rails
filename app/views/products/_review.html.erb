<dl>
  <dd><%= rev.user.first_name %></dd>
  <dd><%= rev.created_at %></dd>
  <dd><%= rev.description %></dd>
  <dd>
    <% rev.rating.times do %>
      <i class="fa fa-star" aria-hidden="true" style="color: #f4c542 ;"></i>
    <% end %>
  </dd>
  <dd>
    <% if current_user.id == rev.user.id  %>
      <%= link_to "/products/#{@product.id}/reviews/#{rev.id}", method: :delete do %>
        <i class="fa fa-trash" style="color: #FF0000 ;"></i>
      <% end %>
    <% end %>
  </dd>
</dl>